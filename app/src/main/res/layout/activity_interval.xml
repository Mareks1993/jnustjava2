<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Walking Interval"
        android:layout_gravity="center"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Interval"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="walk Time"
            android:inputType="number"
            android:textSize="40dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Running Interval"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/et_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Time"
            android:textSize="40dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bclick"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="start"
        android:onClick="intervalSet"
        />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/walk_tv"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Walk"/>
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/run_tv"
        android:textSize="60sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Run"/>

</LinearLayout>